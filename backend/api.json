	"components": {
		"schemas": {
			"LoginResPonseSchema": {
				"type": "object",
				"properties": { "sessionID": { "type": "string" } },
				"required": ["sessionID"]
			},
			"LoginRequestSchema": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"password": { "type": "string" }
				},
				"required": ["name", "password"]
			},
			"ShiftInMonthResponseSchema": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"userID": { "type": "number" },
						"shiftTime": {
							"type": "array",
							"items": {
								"type": "array",
								"items": { "type": "string", "format": "date-time" }
							}
						}
					},
					"required": ["userID", "shiftTime"]
				}
			},
			"UserResponseSchema": {
				"type": "object",
				"properties": {
					"id": { "type": "number" },
					"type": { "type": "string", "enum": ["employer", "employee"] },
					"name": { "type": "string" }
				},
				"required": ["id", "type", "name"]
			},
			"UserRegisterRequestSchema": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"type": { "type": "string", "enum": ["employer", "employee"] },
					"password": { "type": "string", "minLength": 8, "maxLength": 256 }
				},
				"required": ["name", "type", "password"]
			},
			"UserListResponseSchema": {
				"type": "array",
				"items": { "$ref": "#/components/schemas/UserResponseSchema" }
			},
			"GetAttendanceInMonthResponseSchema": {
				"type": "object",
				"properties": {
					"userID": { "type": "number" },
					"attendances": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"time": { "type": "string", "format": "date-time" },
								"state": {
									"type": "string",
									"enum": ["checkIn", "checkOut", "breakStart", "breakEnd"]
								}
							},
							"required": ["time", "state"]
						}
					}
				},
				"required": ["userID", "attendances"]
			},
			"UpdateShiftRequestInMonthSchema": {
				"type": "array",
				"items": {
					"type": "array",
					"items": {
						"anyOf": [
							{
								"type": "string",
								"format": "date-time",
								"description": "startTime"
							},
							{
								"type": "string",
								"format": "date-time",
								"description": "endTime"
							}
						]
					},
					"minItems": 2,
					"maxItems": 2
				},
				"description": "ある月のシフト希望が送られることを想定"
			}
		},
		"parameters": {}
